{
    "name": "carlbennett/php-mvc",
    "description": "A PHP micro-framework for use as a frontend and/or backend",
    "type": "library",
    "keywords": [
        "api",
        "backend",
        "cms",
        "content",
        "frontend",
        "management",
        "mvc",
        "php",
        "rest",
        "restful",
        "system"
    ],
    "homepage": "https://github.com/carlbennett/php-mvc",
    "license": "AGPL-3.0",
    "authors": [
        {
            "name": "Carl Bennett",
            "email": "carl@carlbennett.me"
        }
    ],
    "config": {
      "vendor-dir": "lib"
    },
    "autoload": {
        "psr-4": {
            "CarlBennett\\MVC\\Libraries\\": "src/libraries"
        }
    },
    "require": {
        "ext-curl": "*",
        "ext-http": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mcrypt": "*",
        "ext-memcached": "*",
        "ext-pdo": "*",
        "php-64bit": ">=5.5.0"
    },
    "suggest": {
        "ext-geoip": "*",
        "ext-gmp": "*"
    }
}
